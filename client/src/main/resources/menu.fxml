<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <AnchorPane style="-fx-background-color: green" BorderPane.alignment="CENTER">
            <ImageView fitHeight="70.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                <Image url="@images/LOGO.PNG" />
            </ImageView>
            <ImageView pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         <Button fx:id="modifyPasswordButton"  layoutX="200.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="104.0" text="修改密码" onAction="#modifyPassword" />
         <Button fx:id="logOutButton" layoutX="400.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="104.0" text="退出登录" onAction="#logOut" />
         <Button fx:id="refreshButton" layoutX="600.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="104.0" text="刷新" onAction="#refresh"/>
        </AnchorPane>
    </top>
    <left>
        <VBox alignment="CENTER" style="-fx-background-color: #3737da" BorderPane.alignment="CENTER">
            <!--<ImageView fitHeight="51.0" fitWidth="134.0" pickOnBounds="true" preserveRatio="true"/>-->
            <!--<Label fx:id="roleLabel" style="-fx-text-fill: white"/>-->
            <StackPane>
                <ImageView fitHeight="51.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="false">
                    <Image url="@images/mesh-1430107_1920.png" />
                </ImageView>
                <Text fx:id="roleLabel" />
            </StackPane>

            <JFXTreeView fx:id="leftMenu" prefWidth="150" VBox.vgrow="ALWAYS" />
        </VBox>
    </left>
</BorderPane>
