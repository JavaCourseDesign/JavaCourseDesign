<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.management.front.controller.BasicInfoTab">
    <HBox prefHeight="100.0" prefWidth="200.0">
        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
        <VBox prefHeight="200.0" prefWidth="100.0">
            <Label fx:id="NAME" />
            <Label fx:id="STUDENTID" />
            <Label fx:id="MAJOR" />
        </VBox>
    </HBox>
    <TitledPane animated="false" text="基本信息">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Label GridPane.rowIndex="0" text="姓名" />
                <Label GridPane.rowIndex="1" text="学号" />
                <Label GridPane.rowIndex="2" text="身份证号" />
                <Label GridPane.rowIndex="3" text="性别" />
                <Label GridPane.rowIndex="4" text="生日" />
                <Label GridPane.rowIndex="5" text="学院" />
                <Label GridPane.rowIndex="6" text="专业" />
                <Label GridPane.rowIndex="7" text="班级" />
                <Label GridPane.rowIndex="8" text="政治面貌" />

                <Label GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="name" />
                <Label GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="studentId" />
                <Label GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="idCardNum" />
                <Label GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="gender" />
                <Label GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="birthday" />
                <Label GridPane.columnIndex="1" GridPane.rowIndex="5" fx:id="dept" />
                <Label GridPane.columnIndex="1" GridPane.rowIndex="6" fx:id="major" />
                <Label GridPane.columnIndex="1" GridPane.rowIndex="7" fx:id="administrativeClass" />
                <Label GridPane.columnIndex="1" GridPane.rowIndex="8" fx:id="social" />
            </GridPane>
        </AnchorPane>
    </TitledPane>
    <TitledPane animated="false" text="家庭信息">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
             <TableView editable="true" prefHeight="200.0" prefWidth="200.0">
                 <columns>
                     <TableColumn prefWidth="75.0" text="关系" />
                     <TableColumn prefWidth="75.0" text="姓名" />
                     <TableColumn prefWidth="75.0" text="年龄" />
                     <TableColumn prefWidth="75.0" text="电话" />
                 </columns>
             </TableView>
        </AnchorPane>
    </TitledPane>
    <TitledPane animated="false" text="联系方式">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <Label GridPane.rowIndex="0" text="电话" />
                <Label GridPane.rowIndex="1" text="邮箱" />
                <Label GridPane.rowIndex="2" text="其他" />

                <Label GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="phone"/>
                <Label GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="email"/>
                <Label GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="other"/>
            </GridPane>
        </AnchorPane>
    </TitledPane>
</VBox>
